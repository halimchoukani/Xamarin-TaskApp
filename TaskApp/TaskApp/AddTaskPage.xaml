<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TaskApp.AddTaskPage">
    <ContentPage.Content>
        <StackLayout>

            <Label Text="Ajouter une nouvelle tâche"/>

            <Entry x:Name="taskEntry" Placeholder="Nom de la tâche"/>

            <Button Text="Ajouter" Clicked="OnAddTaskClicked"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>